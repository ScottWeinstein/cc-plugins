{
  "name": "cc-plugins",
  "version": "0.1.4",
  "private": true,
  "description": "Claude Code plugin marketplace with development tools and workflow extensions",
  "type": "module",
  "scripts": {
    "build": "pnpm -r run build",
    "typecheck": "pnpm -r run typecheck",
    "test": "pnpm -r --filter './plugins/*' run test",
    "lint": "eslint .",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,yaml,yml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,yaml,yml}\"",
    "check": "pnpm format:check && pnpm lint && pnpm typecheck",
    "release": "node scripts/release.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ScottWeinstein/cc-plugins.git"
  },
  "author": "Scott Weinstein",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "eslint": "^9.39.1",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1",
    "vitest": "^4.0.15"
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 100,
    "endOfLine": "lf"
  },
  "packageManager": "pnpm@10.24.0",
  "engines": {
    "node": ">= 24.11.0"
  }
}
